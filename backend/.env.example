# Backend Configuration Example
# Copy this file to .env and fill in your values
# For different environments, use:
#   - .env.dev for local development
#   - .env.staging for staging environment
#   - .env.production for production deployment

PORT=4000
NODE_ENV=development

# Database (PostgreSQL)
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://dsa_user:secure_password@localhost:5432/dsa_learning"

# Authentication
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRY=24h

# CORS (adjust for your frontend URL)
CORS_ORIGIN=http://localhost:3000

# Logging (debug|info|warn|error)
LOG_LEVEL=debug

# External Services (Code Execution)
JUDGE0_API_URL=https://judge0-ce.p.rapidapi.com
JUDGE0_API_KEY=your_judge0_api_key_here

# Error Tracking (Optional - leave empty if not using Sentry)
SENTRY_DSN=

# Redis (Optional - for caching, sessions, rate limiting)
REDIS_URL=redis://localhost:6379

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Rate Limiting (for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
CSP_ENABLED=true
